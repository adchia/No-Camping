<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@android:color/black"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/week_title"
        android:background="@drawable/dotted_bottom"
        android:text="Week of September 6th-12th"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:padding="8dp"
        style="@style/ThisWeekTitle"/>

    <include layout="@layout/this_week_insight"
             android:id="@+id/favorite_meeting" />

    <include layout="@layout/this_week_insight"
             android:id="@+id/favorite_cafe" />

    <include layout="@layout/this_week_insight"
             android:id="@+id/time_in_meetings" />

    <LinearLayout
        android:columnCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/coffee_copy"
            android:layout_row="0"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/foodie"
            android:layout_row="0"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/french"
            android:layout_row="0"
            android:layout_column="2"/>


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/coffee_copy"
            android:layout_row="1"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/coffee_copy"
            android:layout_row="1"
            android:layout_column="2"/>
    </LinearLayout>

</LinearLayout>